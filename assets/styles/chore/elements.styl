@import 'color.styl'

disabledStyle()
  &:disabled, &[disabled]
    cursor not-allowed
    color #888
    background-color lighten(secondary, 50%)
    transition background-color .3s ease

radius = 7px

body
  background bg

.card
  display flex
  flex-direction column
  justify-content space-between
  border 1px solid secondary
  width 40vw
  line-height 1.6rem
  white-space wrap
  border-radius 10px
  padding 1.2rem
  @media screen and (max-width: 930px)
    width 85vw !important

.card .title
  line-height 2.2rem

.input
  border-radius radius
  background-color bg
  color font-color
  padding .5rem
  border 1px solid font-color
  &:focus
    background-color rgba(primary, .05)
    border 1px solid primary
    transition all .1s linear

.btn
  border-radius radius
  border none
  font-weight bold
  background-color transparent
  padding .8rem 2.5rem
  transition background-color .2s ease
  disabledStyle()

.btn-primary
  color #ffffff
  background-color primary
  transition all .3s linear
  border 1px solid primary
  &:hover
    background-color bg
    color primary
    border @border
    transition all .3s linear
    disabledStyle()

.btn-icon
  background-color bg
  color font-color
  border none
  padding .3rem .5rem
  margin 0
  &:hover
    background-color rgba(primary, .1)
    border-radius radius

.textarea
  resize none
  height auto
  overflow-y none
